<AgriMainWindow>:
    name: 'main'

    Image:
        source: 'agri/images/Agri.png'
        size: root.width / 3, root.height / 3
        size_hint: None, None
        pos: root.width - self.width , root.height - self.height
        allow_stretch: True
        keep_ratio: True

    GridLayout:
        spacing: 50
        padding: 100
        
        Button:
            spacing: 50
            padding: 100
            background_color: 0, 0, 1, 0

            on_press: 
                root.manager.current = 'settings'
                root.manager.transition.direction = 'left'
                
            Image:
                source: 'agri/images/gear.png'
            

        BoxLayout:
            spacing: 5
            padding: 100
            margin: 50
            size: root.width, root.height
            orientation: 'vertical'

            Label:
                padding: 100
                text: 'Agri Control System'
                font_size: 30
        
            Button:
                text: 'Hardware Status'
                font_size: 20
                on_press: 
                    root.manager.current = 'status'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Power'
                font_size: 20
                on_press: 
                    root.manager.current = 'power'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'DJI Agras T40 Options'
                font_size: 20
                on_press: 
                    root.manager.current = 'var'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'DJI Agras T40 Actions'
                font_size: 20
                on_press: 
                    root.manager.current = 'checks'
                    root.manager.transition.direction = 'left'
    
        

    



