<AgriChecksScreen>  
    name: 'checks'

    Image:
        source: 'agri/images/Agri.png'
        size: root.width / 3, root.height / 3
        size_hint: None, None
        pos: root.width - self.width , root.height - self.height
        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: ''
   
        GridLayout:
            cols: 5
            rows: 5

            Label:
                text: 'Propellers'
                color: 0, 1, 0, 1
                font_size: 20

            Label:
                text: 'Spray'
                color: 0, 1, 0, 1
                font_size: 20
            Label:
                text: 'Front Camera'
                color: 0, 1, 0, 1
                font_size: 20   

            Label: 
                text: 'Back Camera'
                color: 0, 1, 0, 1
                font_size: 20

            Label:
                color: 0, 1, 0, 1
                text: 'Speed'
                font_size: 20

            CheckBox:
            CheckBox:
            CheckBox:
            CheckBox:
            CheckBox:
               
            
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            padding: 50

            size: root.width, root.height

            Button:
                text: 'Return'
                font_size: 20
                on_press: 
                    root.manager.current = 'main'
                    root.manager.transition.direction = 'right'
                