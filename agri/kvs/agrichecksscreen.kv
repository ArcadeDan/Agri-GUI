<AgriChecksScreen>  
    name: 'checks'

    Image:
        source: 'agri/images/Agri.png'
        size: root.width / 3, root.height / 3
        size_hint: None, None
        pos: root.width - self.width , root.height - self.height
        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ''

        CheckBox:
            text: 'Check 1'
        

        Button:
            text: 'Return'
            on_press: 
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'