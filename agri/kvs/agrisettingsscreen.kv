<AgriSettingsScreen>
    name: 'settings'

    Image:
        source: 'agri/images/Agri.png'
        size: root.width / 3, root.height / 3
        size_hint: None, None
        pos: root.width - self.width , root.height - self.height
        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        spacing: 5
        padding: 100
        margin: 50
        size: root.width, root.height
        orientation: 'vertical'

        Label:
            id: clock
            text: '00:00'

        Label:
            text: 'User'
            font_size: 50

        TextInput:
            text: ''
            font_size: 30

        Label:
            text: 'Password'
            font_size: 50

        TextInput:
            text: ''
            font_size: 30

        Button:
            text: 'Login'
            background_color: 0, 1, 0, 100

        Button:
            text: 'Return'  
            on_press: 
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'
        